<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_income_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp1.000.000.000,00"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#00a113"/>

        <TextView
            android:id="@+id/tv_income_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Jualan Wak Doyok"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_expense_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp1.000.000.000,00"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#e30000"/>

        <TextView
            android:id="@+id/tv_expense_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bucin"
            android:textAlignment="center"/>

    </LinearLayout>

</LinearLayout>